<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <action
        android:id="@+id/action_to_detailsFragment"
        app:destination="@id/detailsFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ezatpanah.flow_retrofit_youtube.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ezatpanah.flow_retrofit_youtube.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ezatpanah.flow_retrofit_youtube.ui.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
</navigation>